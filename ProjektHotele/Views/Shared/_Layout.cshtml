<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TwójHotel</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

</head>
<body>
    <div class="container-fullwidth">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">

            <a class="navbar-brand" style="color: white">TwójHotel</a>
            <button class="navbar-toggler order-first" type="button" data-toggle="collapse" data-target="#tgmenu" aria-controls="tgmenu" aria-expanded="false" aria-label="Rozwijanie menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="tgmenu">

                <ul class="navbar-nav">

                    @Html.ActionLink("Strona Główna", "Index", "Home", new object { }, new { @class = "nav-link" })
                    @Html.ActionLink("Hotele", "Hotel", "Hotel", new object { }, new { @class = "nav-link" })
                    @Html.ActionLink("O nas", "Onas", "Onas", new object { }, new { @class = "nav-link" })


                </ul>
            </div>

            <div class="collapse navbar-collapse" id="tgmenu">
                <ul class="navbar-nav ml-auto">
                    @Html.ActionLink("Zaloguj się", "Login", "Account", new object { }, new { @class = "nav-link" })
                </ul>
            </div>





        </nav>


    </div>

    <div class="container">






        @RenderBody()
    </div>









    <script src="~/Content/jquery/jquery.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>