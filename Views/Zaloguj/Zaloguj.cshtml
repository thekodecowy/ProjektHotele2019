
@{
    ViewBag.Title = "Zaloguj";
}

<div class="modal-dialog text-center">
    <div class="col-sm-9 main-section">
        <div class="modal-content">

            <div class="col-12 user-img">
                <img src="~/img/face2.png">
            </div>

            <div class="col-12 form-input">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Login">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Hasło">
                    </div>

                    <button type="submit" class="btn btn-info" style="margin-bottom:10px">Zaloguj się</button>

                </form>
            </div>
            <div class="col-12 forgot">
                @Html.ActionLink("Zarejestruj się", "Rejestracja", "Rejestracja", new object { }, new { @class = "nav-link" })
            </div>



        </div>
    </div>
</div>

